<%= form_for(post, :url => url_for(:controller => 'posts', :action => 'pre_create')) do |f| %>
<div class="form-group">
  <%= f.text_area :content, class: 'form-control', rows: '2', placeholder: "Ask for competitive quotations" %>
  <div class="action">
    <%= f.submit "Post", class: 'btn btn-default' %>
  </div>
</div>
<% end %>
