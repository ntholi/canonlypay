<section class="form-container"></section>

<% @posts.each do |post| %>
<article class="post row">
  <div class="col-xs-2">
    <a href="#" class="thumbnail">
      <img src="https://placehold.it/60">
    </a>
  </div>
  <div class="col-xs-10">
    <header>
      <span class="post-title"><%= post.user.full_name %></span>
      <span class="post-subtitle">
        wants to buy</span>
      <br>
      <span class="post-time"><%= time_ago_in_words(post.updated_at).capitalize %>
        ago</span>
    </header>
    <%= post.product %>
    <%= post.user.full_name %>
    <%= link_to 'More Info', post %>
  </div>
</article>
<% end %>
