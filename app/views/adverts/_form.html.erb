<%= form_for(advert, :html => {:class => "form-horizontal"}) do |f| %>
<% if advert.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(advert.errors.count, "error") %>
    prohibited this advert from being saved:</h2>

  <ul>
    <% advert.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :company_name, "Advertiser", class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.collection_select :company_id, current_user.companies, :id, :company_name, {}, {class: 'form-control'} %>
  </div>
</div>

<%= f.fields_for :product do |fp| %>

<div class="form-group">
  <%= fp.label :name, "Product Name", class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= fp.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= fp.label :product_category_id, class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= fp.collection_select :product_category_id, ProductCategory.all, :id, :category, {}, {class: 'form-control'} %>
  </div>
</div>

<div class="form-group">
  <%= fp.label :price, class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= fp.text_field :price, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= fp.label :year_made, class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= fp.number_field :year_made, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= fp.label :description, class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= fp.text_area :description, class: 'form-control' %>
  </div>
</div>

<% end %>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-9">
    <%= f.submit "Post Advert", class: 'btn btn-default' %>
  </div>
</div>
<% end %>
